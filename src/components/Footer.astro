---
import Icon from "./Icon.astro";
const currentYear = new Date().getFullYear();
---

<footer>
  <div class="group">
    <p>
      Designed & Developed in Bastia by
      <a href="mailto:contact@diogo.corsica">Diogo</a>
      <Icon icon="rocket-launch" size="1.2em" />
    </p>
    <p>&copy; {currentYear} Diogo Ferreira</p>
  </div>

  <div class="visits">
    <Icon icon="eye" size="1.2em" />
    <span>Visits:</span>
    <span id="visit-count">…</span>
  </div>
</footer>

<!-- Script para buscar o contador em JSON -->
<script is:inline type="module">
  fetch(
    "https://hits.seeyoufarm.com/api/count/incr?url=https%3A%2F%2Fdiogo.corsica"
  )
    .then((r) => r.json())
    .then((data) => {
      document.getElementById("visit-count").textContent = data.value;
    })
    .catch(() => {
      document.getElementById("visit-count").textContent = "–";
    });
</script>

<style>
  footer {
    display: flex;
    flex-direction: column;
    gap: 2rem;
    margin-top: auto;
    padding: 3rem 2rem;
    text-align: center;
    color: var(--gray-400);
    font-size: var(--text-sm);
  }
  .group {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }
  .visits {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    font-weight: 500;
  }
  .visits span#visit-count {
    min-width: 2ch;
  }
  footer a {
    color: var(--gray-400);
    text-decoration: underline transparent;
    text-underline-offset: 0.25em;
    transition: text-decoration-color var(--theme-transition);
  }
  footer a:hover,
  footer a:focus {
    text-decoration-color: currentColor;
  }
  @media (min-width: 50em) {
    footer {
      flex-direction: row;
      justify-content: space-between;
      padding: 2.5rem 5rem;
    }
    .group {
      flex-direction: row;
      gap: 1rem;
      flex-wrap: wrap;
    }
  }
</style>
