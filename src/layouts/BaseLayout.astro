---
// Learn about using Astro layouts:
// https://docs.astro.build/en/core-concepts/layouts/

// Component Imports
import "../styles/global.css";
import MainHead from "../components/MainHead.astro";
import Nav from "../components/Nav.astro";
import Footer from "../components/Footer.astro";
import bgMainLight from "../assets/backgrounds/bg-main-light.svg";
import bgMainLight1440w from "../assets/backgrounds/bg-main-light-1440w.webp";
import bgMainDark1440w from "../assets/backgrounds/bg-main-dark-1440w.webp";
import bgSubtle1Light1440w from "../assets/backgrounds/bg-subtle-1-light-1440w.webp";
import bgSubtle2Light1440w from "../assets/backgrounds/bg-subtle-2-light-1440w.webp";
import bgFooterLight1440w from "../assets/backgrounds/bg-footer-light-1440w.webp";
import bgSubtle1Dark1440w from "../assets/backgrounds/bg-subtle-1-dark-1440w.webp";
import bgSubtle2Dark1440w from "../assets/backgrounds/bg-subtle-2-dark-1440w.webp";
import bgFooterDark1440w from "../assets/backgrounds/bg-footer-dark-1440w.webp";
import noise from "../assets/backgrounds/noise.webp";
interface Props {
  title?: string | undefined;
  description?: string | undefined;
}

const { title, description } = Astro.props;
---

<script src="/scripts/init.js" defer></script>

<html lang="fr" class="bg-noise loaded">
  <head>
    <!-- 1. Pr√©-carrega o SVG do LCP -->
    <link
      rel="preload"
      as="image"
      href="/assets/backgrounds/bg-main-light.svg"
      fetchpriority="high"
    />

    <!-- 2. Preconnect para Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Public+Sans&display=swap"
      rel="stylesheet"
    />

    <!-- 3. Inline do Critical CSS (mantido) -->
    <style is:inline>
      /* üî• Cola aqui TODO o conte√∫do do critical.css como j√° fizeste */
      /* Este conte√∫do j√° est√° bem copiado acima, por isso n√£o repito aqui */
    </style>

    <!-- 4. CSS Global carregado corretamente -->
    <link rel="preload" as="style" href="/_astro/about.B-ATDIEY.css" />
    <link rel="stylesheet" href="/_astro/about.B-ATDIEY.css" />

    <!-- 5. Meta, t√≠tulo e SEO -->
    <MainHead title={title} description={description} />
  </head>

  <body>
    <div class="stack backgrounds">
      <Nav />
      <slot />
      <Footer />
    </div>

    <script src="/scripts/init.js" defer></script>
    <script is:inline>
      window.addEventListener("load", () => {
        document.documentElement.classList.add("bg-noise", "loaded");
      });
    </script>

    <style>
      @media (min-width: 50em) {
        :root {
          --bg-scale: 1;
          --bg-image-main: url("/assets/backgrounds/bg-main-light-1440w.webp");
        }
        :root.theme-dark {
          --bg-image-main: url("/assets/backgrounds/bg-main-dark-1440w.webp");
        }

        :root.loaded {
          --bg-image-subtle-1: url("/assets/backgrounds/bg-subtle-1-light-1440w.webp");
          --bg-image-subtle-2: url("/assets/backgrounds/bg-subtle-2-light-1440w.webp");
          --bg-image-footer: url("/assets/backgrounds/bg-footer-light-1440w.webp");
        }
        :root.loaded.theme-dark {
          --bg-image-subtle-1: url("/assets/backgrounds/bg-subtle-1-dark-1440w.webp");
          --bg-image-subtle-2: url("/assets/backgrounds/bg-subtle-2-dark-1440w.webp");
          --bg-image-footer: url("/assets/backgrounds/bg-footer-dark-1440w.webp");
        }
      }

      :root.bg-noise .backgrounds {
        background-image:
          url("/assets/backgrounds/noise.webp"), var(--bg-image-footer),
          var(--bg-image-main-curves), var(--bg-image-main), var(--gray-999);

        background-blend-mode:
          overlay, var(--bg-blend-mode), var(--bg-svg-blend-mode), normal,
          normal;
      }

      @media (forced-colors: active) {
        .backgrounds {
          background: none;
          background-blend-mode: none;
          --bg-gradient-size: none;
        }
      }
    </style>

    <script is:inline>
      window.addEventListener("load", () => {
        document.documentElement.classList.add("bg-noise", "loaded");
      });
    </script>
  </body>
</html>
