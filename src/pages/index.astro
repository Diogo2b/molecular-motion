---
import { getCollection } from "astro:content";
import BaseLayout from "../layouts/BaseLayout.astro";
import CallToAction from "../components/CallToAction.astro";
import Grid from "../components/Grid.astro";
import Hero from "../components/Hero.astro";
import Icon from "../components/Icon.astro";
import Pill from "../components/Pill.astro";
import PortfolioPreview from "../components/PortfolioPreview.astro";
import ContactCTA from "../components/ContactCTA.astro";
import Skills from "../components/Skills.astro";

// Busca e ordena os 4 projetos mais recentes
const projects = (await getCollection("work"))
  .sort((a, b) => b.data.publishDate.valueOf() - a.data.publishDate.valueOf())
  .slice(0, 4);

// Frontmatter para meta tags
export const frontmatter = {
  title: "Ol√°, je m'appelle Diogo ‚Äì Portfolio",
  description: "D√©veloppement web en Haute-Corse, solu√ß√µes Astro.js & Vercel.",
  image: "/assets/og/home-preview.png",
};
---

<BaseLayout
  title={frontmatter.title}
  description={frontmatter.description}
  image={frontmatter.image}
>
  <div class="stack gap-20 lg:gap-48">
    <div class="wrapper stack gap-8 lg:gap-20">
      <header class="hero">
        <Hero
          title="Ol√°, je m'appelle Diogo"
          tagline="D√©veloppeur aujourd‚Äôhui, Chef de Projet Digital demain ‚Äî l‚Äôaventure continue depuis la Corse üåä"
          align="start"
        >
          <div class="roles">
            <Pill><Icon icon="code" size="1.33em" /> D√©veloppeur Web</Pill>
            <Pill
              ><Icon icon="codepen-logo" size="1.33em" /> Passionn√© de Technologie</Pill
            >
            <Pill
              ><Icon icon="rocket-launch" size="1.33em" /> En formation Chef de Projet</Pill
            >
          </div>
        </Hero>

        <img
          src="/assets/portrait.webp"
          srcset="/assets/portrait-300w.webp 300w, /assets/portrait.webp 400w"
          sizes="(max-width: 768px) 100vw, 300px"
          width="300"
          height="400"
          alt="Diogo Ferreira avec des lunettes rondes et une chemise bleue √† pois..."
          fetchpriority="high"
          decoding="async"
          loading="eager"
        />
      </header>

      <Skills />
    </div>

    <main class="wrapper stack gap-20 lg:gap-48">
      <!-- Se√ß√£o R√©alisations -->
      <section class="section with-background with-cta">
        <header class="section-header stack gap-2 lg:gap-4">
          <h3>Mes R√©alisations</h3>
          <p>
            D√©couvrez ci-dessous quelques-uns de mes projets phares r√©alis√©s
            pour des clients au fil des derni√®res ann√©es.
          </p>
        </header>

        <div class="gallery">
          <Grid variant="offset">
            {
              projects.map((project) => (
                <li>
                  <PortfolioPreview project={project} />
                </li>
              ))
            }
          </Grid>
        </div>

        <div class="cta">
          <CallToAction href="/work/">
            Voir tout <Icon icon="arrow-right" size="1.2em" />
          </CallToAction>
        </div>
      </section>

      <!-- Se√ß√£o Comp√©tences -->
      <section class="section with-background bg-variant">
        <header class="section-header stack gap-2 lg:gap-4">
          <h3>Comp√©tences Techniques</h3>
          <p>
            Voici un aper√ßu des technologies et comp√©tences que j‚Äôutilise pour
            cr√©er des solutions innovantes.
          </p>
          <p>
            Je suis actuellement en formation pour devenir Chef de Projet
            Digital, afin de mieux accompagner mes clients dans leurs projets
            strat√©giques.
          </p>
        </header>

        <div class="gallery">
          <Grid variant="small">
            {
              [
                {
                  tech: "CSS (Sass, TailwindCSS, etc)",
                  logo: "/assets/icons/css.svg",
                },
                {
                  tech: "PHP (Symfony, Laravel, etc)",
                  logo: "/assets/icons/php-original.svg",
                },
                {
                  tech: "JavaScript (React.js, Next.js, etc)",
                  logo: "/assets/icons/javascript-original.svg",
                },
                {
                  tech: "SQL (MySQL, PostgreSQL, etc)",
                  logo: "/assets/icons/mysql-original.svg",
                },
                {
                  tech: "Git (GitHub, GitLab, etc)",
                  logo: "/assets/icons/git-original.svg",
                },
                { tech: "Symfony", logo: "/assets/icons/symfony-original.png" },
                { tech: "Next.js", logo: "/assets/icons/nextjs-original.svg" },
                { tech: "React.js", logo: "/assets/icons/react-original.svg" },
                { tech: "Astro.js", logo: "/assets/icons/astro-original.png" },
                { tech: "Sass", logo: "/assets/icons/sass-original.svg" },
                { tech: "Less", logo: "/assets/icons/less-original.svg" },
                {
                  tech: "Elementor",
                  logo: "/assets/icons/elementor-original.png",
                },
              ].map((item) => (
                <li class="mention-card">
                  <img
                    src={item.logo}
                    alt=""
                    aria-hidden="true"
                    class="tech-logo"
                    loading="lazy"
                    decoding="async"
                  />
                  <p>{item.tech}</p>
                </li>
              ))
            }
          </Grid>
        </div>
      </section>
    </main>

    <ContactCTA />
  </div>
</BaseLayout>

<style>
  /* Hero styles */
  .hero {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 2rem;
  }

  .roles {
    display: none;
  }

  .hero img {
    aspect-ratio: 5 / 4;
    object-fit: cover;
    object-position: top;
    border-radius: 1.5rem;
    box-shadow: var(--shadow-md);
  }

  @media (min-width: 50em) {
    .hero {
      display: grid;
      grid-template-columns: 6fr 4fr;
      padding-inline: 2.5rem;
      gap: 3.75rem;
    }

    .roles {
      margin-top: 0.5rem;
      display: flex;
      gap: 0.5rem;
    }

    .hero img {
      aspect-ratio: 3 / 4;
      border-radius: 4.5rem;
      object-fit: cover;
    }
  }

  /* Se√ß√µes com fundo e grid */
  .section {
    display: grid;
    gap: 2rem;
  }

  .with-background {
    position: relative;
  }

  .with-background::before {
    --hero-bg: var(--bg-image-subtle-2);

    content: "";
    position: absolute;
    pointer-events: none;
    left: 50%;
    width: 100vw;
    aspect-ratio: calc(2.25 / var(--bg-scale));
    top: 0;
    transform: translateY(-75%) translateX(-50%);
    background:
      url("/assets/backgrounds/noise.webp") top center/220px repeat,
      var(--hero-bg) center center/var(--bg-gradient-size) no-repeat,
      var(--gray-999);
    background-blend-mode: overlay, normal, normal;
    mix-blend-mode: var(--bg-blend-mode);
    z-index: -1;
  }

  .with-background.bg-variant::before {
    --hero-bg: var(--bg-image-subtle-1);
  }

  .section-header {
    justify-self: center;
    text-align: center;
    max-width: 50ch;
    font-size: var(--text-md);
    color: var(--gray-300);
  }

  .section-header h3 {
    font-size: var(--text-2xl);
  }

  .gallery {
    display: grid;
    gap: 1.5rem;
  }

  @media (min-width: 50em) {
    .section {
      grid-template-columns: repeat(4, 1fr);
      grid-template-areas:
        "header header header header"
        "gallery gallery gallery gallery";
      gap: 5rem;
    }

    .section.with-cta {
      grid-template-areas:
        "header header header cta"
        "gallery gallery gallery gallery";
    }

    .section-header {
      grid-area: header;
      font-size: var(--text-lg);
    }

    .section-header h3 {
      font-size: var(--text-4xl);
    }

    .with-cta .section-header {
      justify-self: flex-start;
      text-align: left;
    }

    .gallery {
      grid-area: gallery;
    }

    .cta {
      grid-area: cta;
    }
  }

  /* Mention Cards (Tecnologias) */
  .mention-card {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    border: 1px solid var(--gray-800);
    border-radius: 1.5rem;
    padding: 1rem;
    color: var(--gray-300);
    background: var(--gradient-subtle);
    box-shadow: var(--shadow-sm);
  }

  .mention-card p {
    font-size: 1.05rem;
  }

  .tech-logo {
    width: 70px;
    height: 70px;
    margin-bottom: 0.75rem;
  }

  @media (min-width: 50em) {
    .mention-card {
      padding: 1.5rem;
    }
  }
</style>
